### Authentication and Authorization
Implement secure auth patterns:

```typescript
// ‚úÖ CORRECT: Secure authentication check
import { auth } from '@clerk/nextjs';
import { NextRequest, NextResponse } from 'next/server';

export async function GET(request: NextRequest) {
  const { userId } = auth();
  
  if (!userId) {
    return NextResponse.json(
      { error: 'Unauthorized' },
      { status: 401 }
    );
  }
  
  // Verify user has required permissions
  const user = await getUserById(userId);
  if (!user || !user.isActive) {
    return NextResponse.json(
      { error: 'Forbidden' },
      { status: 403 }
    );
  }
  
  // Safe to proceed with authenticated request
  return NextResponse.json({ data: 'protected data' });
}

// ‚ùå AVOID: Missing authentication checks
export async function GET(request: NextRequest) {
  // No auth check - anyone can access!
  return NextResponse.json({ data: 'sensitive data' });
}
